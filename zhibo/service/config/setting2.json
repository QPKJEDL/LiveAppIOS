{
	"home":{
		"title":"设置",
        "actions":{
            "title":"退出登录",
            "bgcolor":"#C20C0C"
        },
		"sections":[
			{
                "css":{
                    "item.size.width":"100%",
                    "item.size.height":"50",
                    "item.rowSpacing":"1",
                },
				"items":[
					{
						"title":"银行卡",
						"type":"arrow",
						"key":"binding_bank",
                        "native_id":"arrowitem"
					},
                    {
                        "title":"修改登录密码",
                        "type":"arrow",
                        "key":"loginpwd",
                        "native_id":"arrowitem"
                    },
                    {
                        "title":"修改支付密码",
                        "type":"arrow",
                        "key":"rechargepwd",
                        "native_id":"arrowitem"
                    },
                    {
                        "title":"修改昵称",
                        "type":"arrow",
                        "key":"editnick",
                        "native_id":"arrowitem"
                    }
                ]
			}
		]
	},
    "editnick":{
        "title":"修改昵称",
        "actions":{
            "title":"立即修改"
        },
        "sections":[
            {
                "css":{
                    "item.size.width":"100%",
                    "item.size.height":"50",
                    "item.rowSpacing":"1",
                    "section.insert.top":"1"
                },
                "items":[
                    {
                        "title":"昵称",
                        "type":"input",
                        "placeholder":"请填写昵称",
                        "max":10,
                        "key":"nickname",
                        "native_id":"inputitem"
                    }
                ]
            }
        ]
    },
    "loginpwd":{
        "title":"修改登录密码",
        "actions":{
            "title":"立即修改"
        },
        "sections":[
            {
                "items":[
                    {
                        "title":"新密码",
                        "type":"input",
                        "placeholder":"请输入新密码",
                        "key":"newpwd",
                        "native_id":"inputitem",
                    },
                    {
                        "title":"确认密码",
                        "type":"input",
                        "placeholder":"请再输入一次",
                        "key":"renewpwd",
                        "native_id":"inputitem"
                    },
                    {
                        "title":"验证码",
                        "type":"input",
                        "placeholder":"请输入短信验证码",
                        "key":"sms",
                        "tt":"number",
                        "native_id":"smsitem",
                        "smstype":1,
                    }
                ]
            }
        ]
    },
    "rechargepwd":{
        "title":"修改支付密码",
        "actions":{
            "title":"立即修改"
        },
        "sections":[
            {
                "items":[
                    {
                        "title":"新密码",
                        "type":"input",
                        "placeholder":"请输入新密码",
                        "key":"newpwd",
                        "native_id":"inputitem"
                    },
                    {
                        "title":"确认密码",
                        "type":"input",
                        "placeholder":"请再输入一次",
                        "key":"renewpwd",
                        "native_id":"inputitem"
                    },
                    {
                        "title":"验证码",
                        "type":"input",
                        "placeholder":"请输入短信验证码",
                        "key":"sms",
                        "tt":"number",
                        "native_id":"smsitem",
                        "smstype":2,
                    }
                ]
            }
        ]
    },
	"binding":{
		"title":"账户绑定",
		"sections":[
			{
                "css":{
                    "item.size.width":"100%",
                    "item.size.height":"50",
                    "item.rowSpacing":"1",
                },
				"items":[
					{
						"title":"银行卡绑定",
						"type":"arrow",
						"key":"binding_bank",
                        "native_id":"arrowitem"
					}
				]
			}
		]
	},
	"notice":{
		"title":"消息通知",
		"sections":[
			{
                "css":{
                    "item.size.width":"100%",
                    "item.size.height":"50",
                    "item.rowSpacing":"1",
                },
				"items":[
					{
						"title":"评论提醒",
						"type":"switch",
						"key":"notice_comment",
                        "native_id":"switchitem"
					},
					{
						"title":"被@",
						"type":"switch",
						"key":"notice_aite",
                        "native_id":"switchitem"
					},
					{
						"title":"有人关注了我",
						"type":"switch",
						"key":"notice_follow",
                        "native_id":"switchitem"
					},
					{
						"title":"私信",
						"type":"switch",
						"key":"notice_letter",
                        "native_id":"switchitem"
					}
				]
			}
		]
	},
    "binding_alipay":{
        "title":"绑定支付宝",
        "actions":{
            "title":"立即绑定"
        },
        "sections":[
            {
                "css":{
                    "item.size.width":"100%",
                    "item.size.height":"50",
                    "item.rowSpacing":"1",
                },
                "items":[
                    {
                        "title":"支付宝昵称",
                        "type":"input",
                        "placeholder":"例: 张三",
                        "key":"alipay_name",
                        "value":"AliName",
                        "native_id":"inputitem"
                    },
                    {
                        "title":"支付宝账号",
                        "type":"input",
                        "placeholder":"请填写账号",
                        "key":"alipay_account",
                        "value":"Ali",
                        "native_id":"inputitem"
                    }
                ]
            }
        ]
    },
    "binding_wechat":{
        "title":"绑定微信",
        "actions":{
            "title":"立即绑定"
        },
        "sections":[
            {
                "css":{
                    "item.size.width":"100%",
                    "item.size.height":"50",
                    "item.rowSpacing":"1",
                },
                "items":[
                    {
                        "title":"微信昵称",
                        "type":"input",
                        "placeholder":"例: 张三",
                        "key":"wx_name",
                        "value":"WxName",
                        "native_id":"inputitem"
                    },
                    {
                        "title":"微信账号",
                        "type":"input",
                        "placeholder":"请填写账号",
                        "key":"wx_account",
                        "value":"Wx",
                        "native_id":"inputitem"
                    }
                ]
            }
        ]
    },
	"binding_bank":{
		"title":"绑定银行卡",
        "actions":{
            "title":"立即绑定"
        },
		"sections":[
			{
                "css":{
                    "item.size.width":"100%",
                    "item.size.height":"50",
                    "item.rowSpacing":"1",
                },
				"items":[
					{
						"title":"持卡人姓名",
						"type":"input",
						"placeholder":"请输入持卡人姓名",
						"key":"bank_username",
                        "native_id":"inputitem",
					},
					{
						"title":"银行名称",
						"type":"input",
						"placeholder":"请输入银行名称",
						"key":"bank_name",
                        "native_id":"inputitem",
					},
					{
						"title":"开户网点",
						"type":"input",
						"placeholder":"请输入开户网点",
						"key":"bank_store",
                        "native_id":"inputitem",
					},
					{
						"title":"银行卡号",
						"type":"input",
						"placeholder":"请输入银行卡号",
						"key":"bank_cardnumber",
                        "native_id":"inputitem",
                        "tt":"number",
					},
					{
						"title":"设置支付密码",
						"type":"input",
						"placeholder":"请输入支付密码",
						"key":"bank_pwd",
                        "native_id":"inputitem",
					},
                    {
                        "title":"确认支付密码",
                        "type":"input",
                        "placeholder":"请再次输入支付密码",
                        "key":"rebank_pwd",
                        "native_id":"inputitem",
                    }
				]
			}
		]
	},
    "editing_bank":{
        "title":"修改银行卡",
        "actions":{
            "title":"立即修改"
        },
        "sections":[
            {
                "css":{
                    "item.size.width":"100%",
                    "item.size.height":"50",
                    "item.rowSpacing":"1",
                },
                "items":[
                    {
                        "title":"持卡人姓名",
                        "type":"input",
                        "placeholder":"请输入持卡人姓名",
                        "key":"bank_username",
                        "native_id":"inputitem",
                        "value":"CardName",
                        "disable":true,
                    },
                    {
                        "title":"银行名称",
                        "type":"input",
                        "placeholder":"请输入银行名称",
                        "key":"bank_name",
                        "native_id":"inputitem",
                        "value":"BankName",
                    },
                    {
                        "title":"开户网点",
                        "type":"input",
                        "placeholder":"请输入开户网点",
                        "key":"bank_store",
                        "native_id":"inputitem",
                        "value":"BankAddr",
                    },
                    {
                        "title":"银行卡号",
                        "type":"input",
                        "placeholder":"请输入银行卡号",
                        "key":"bank_cardnumber",
                        "native_id":"inputitem",
                        "tt":"number",
                        "value":"bk",
                    }
                ]
            }
        ]
    }
}
